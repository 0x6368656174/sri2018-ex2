<section class="modal" id="{{ id }}">
  <div class="modal__content">
    <div class="modal__popup">
      <div class="modal__title">
        {% include 'components/c-title/c-title.twig' with {
          level: 'h2',
          title: title,
          description: description
        } %}
      </div>

      {% block content %}{% endblock %}
    </div>

    <button class="modal__button modal__button--primary">Применить</button>
    <button class="modal__button">Закрыть</button>
  </div>
</section>
