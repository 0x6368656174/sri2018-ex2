{% if icon == 'rain' %}
  {% set fileName = 'cloud-drizzle' %}
  {% set alt = 'дождь' %}
{% elseif icon == 'menu' %}
  {% set fileName = 'list' %}
  {% set alt = 'меню' %}
{% elseif icon == 'clock' %}
  {% set fileName = 'scheduled' %}
  {% set alt = 'часы' %}
{% elseif icon == 'temperature--gray' %}
  {% set fileName = icon %}
  {% set alt = 'серый термометр' %}
{% elseif icon == 'temperature--orange' %}
  {% set fileName = icon %}
  {% set alt = 'оранжевый термометр' %}
{% elseif icon == 'sun--gray' %}
  {% set fileName = icon %}
  {% set alt = 'серое солнце' %}
{% elseif icon == 'sun--orange' %}
  {% set fileName = icon %}
  {% set alt = 'оранжевое солнце' %}
{% elseif icon == 'double-arrow--top' %}
  {% set fileName = icon %}
  {% set alt = 'двойная стрелка вверх' %}
{% elseif icon == 'arrow--down' %}
  {% set fileName = icon %}
  {% set alt = 'стрелка вниз' %}
{% elseif icon == 'arrow--left' %}
  {% set fileName = icon %}
  {% set alt = 'стрелка влево' %}
{% elseif icon == 'arrow--left-active' %}
  {% set fileName = icon %}
  {% set alt = 'активная стрелка влево' %}
{% elseif icon == 'arrow--right' %}
  {% set fileName = 'arrow--left' %}
  {% set rotate = '180' %}
  {% set alt = 'стрелка вправо' %}
{% elseif icon == 'arrow--right-active' %}
  {% set fileName = 'arrow--left-active' %}
  {% set rotate = '180' %}
  {% set alt = 'активная стрелка вправо' %}
{% endif %}

<snap class="c-icon c-icon--{{ icon }} {{ rotate ? 'c-icon--rotate-' ~ rotate }} {{ class }}">
  {% include 'components/c-image/c-image.twig' with {
    fileName: 'icons/' ~ fileName,
    alt: alt,
    class: 'c-icon__image'
  } %}
</snap>
